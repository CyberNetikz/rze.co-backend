# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Connection
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rze_trading
DATABASE_USER=rze_admin
DATABASE_PASSWORD=your_secure_password_here

# Full connection string (alternative to individual settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================

# Slack Notifications
SLACK_ENABLED=true
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=your-channel-id

# Email Notifications
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=RZE Trading <your-email@gmail.com>
EMAIL_TO=your-notification-email@gmail.com

# ===========================================
# TRADING CONFIGURATION
# ===========================================

# Default trade size as percentage of starting capital
DEFAULT_TRADE_SIZE_PERCENT=20

# Maximum concurrent positions
MAX_CONCURRENT_POSITIONS=10

# Minimum account balance to allow new trades
MIN_ACCOUNT_BALANCE=10000

# ===========================================
# LOGGING
# ===========================================

LOG_LEVEL=info
LOG_FILE=logs/rze-trading.log

# ===========================================
# SECURITY
# ===========================================

# JWT Secret for session management (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# API Key for internal services (generate a random string)
INTERNAL_API_KEY=your-internal-api-key
